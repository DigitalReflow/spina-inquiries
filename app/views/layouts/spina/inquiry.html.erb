<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>You've recieved a message from your website</title>
    <style>
      body {
        background-color: #f6f6f6;
        font-family: sans-serif;
        font-size: 16px;
        line-height: 1.5;
        margin: 0;
        padding: 0;
      }
      
      table {
        border-collapse: separate;
        width: 100%;
        border-spacing: 8px 16px;
      }
      
      table td {
        vertical-align: top;
      }
      
      p {
        margin: 0 0 16px;
      }
      
      h1 {
        font-size: 24px;
        line-height: 1.2;
      }
      
      .container {
        display: block;
        margin: 16px auto;
        max-width: 600px;
        padding: 16px;
        width: 100%;
        background: #fff;
      }
    </style>
  </head>
  <body>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td class="container">
          <%= yield %>
        </td>
      </tr>
    </table>
  </body>
</html>
