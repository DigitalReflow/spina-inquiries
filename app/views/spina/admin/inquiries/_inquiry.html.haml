%li.dd-item
  %div.dd-item-inner
    = link_to spina.admin_inquiry_path(inquiry), class: 'button button-link button-small sortable-link' do
      = new_inquiry_label(inquiry)
      = inquiry.name
      %span.small (#{inquiry.created_at.strftime("%e %B %Y").strip})
    = new_inquiry_label(inquiry)
    %span{style: 'display: flex'}
      - unless inquiry.read?
        = link_to t('spina.inquiries.mark_as_read'), spina.mark_as_read_admin_inquiry_path(inquiry), method: :patch, class: 'button button-small', style: 'margin-right: 12px', data: { icon: 'k' }
        
      = link_to t('spina.delete'), spina.admin_inquiry_path(inquiry), method: :delete, class: 'button button-danger button-small', data: { confirm: t('spina.inquiries.delete_confirmation', subject: inquiry.name) }
